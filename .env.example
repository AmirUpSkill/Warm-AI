# --- App Configuration ---
PROJECT_NAME="Warm AI"
VERSION="1.0.0"
ENVIRONMENT="development"

# --- Security ---
JWT_SECRET="generate-a-long-random-string-here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Database ---
