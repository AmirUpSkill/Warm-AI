DATABASE_URL="postgresql+asyncpg://postgres:postgres@db:5432/warmai"

# --- AI & Search API Keys ---
EXA_API_KEY="your_exa_key_here"
GEMINI_API_KEY="your_gemini_key_here"

# --- Frontend ---
NEXT_PUBLIC_API_URL="http://localhost:8000/api/v1"